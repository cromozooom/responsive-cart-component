								p.titleHead: strong
									| quantita
								.input-group.number-spinner
									span.input-group-btn.left
										button.btn.btn-default(data-dir="dwn")
											span.glyphicon.glyphicon-minus

									input.form-control.text-center.qty(type="text" value="1")
									span.input-group-btn.right
										button.btn.btn-default(data-dir="up")
											span.glyphicon.glyphicon-plus
								block modifyAction

							.col-xs-6.col-sm-6.col-md-4.partialPrice
								p.titleHead: strong
									| totale parziale
								h4.unitPrice
									strong.price € 40,00
				.clearfix
			// slider prod
			.container-fluid.relatedProd.text-center
				.container
					.row
						.col-xs-12
							br
							h5.text-center: strong Related products
					hr
					.row.relatedProd
						mixin productImageRow(title, image, price, hide)
							.col-xs-6.col-sm-4.col-md-3.col-lg-2(class="#{hide}")
								img.img-responsive(src="#{imagePath}#{image}")
								strong.price € #{price}
								a.btn.btn-link(href="#"): strong + To cart
								p.text-center= title

						+productImageRow("Ac Milan Home Authentic Jersey 2015/16", "thumb01.jpg", "20,00", "")
						+productImageRow("Milan Home Jersey 2015/16 Iphone 6", "thumb02.jpg", "20,00", "")
						+productImageRow("Milan Home Sciarpa", "thumb03.jpg", "20,00", "hidden-xs")
						+productImageRow("Ac Milan Home Authentic Jersey 2015/16", "thumb01.jpg", "20,00", "hidden-xs hidden-sm")
						+productImageRow("Milan Home Jersey 2015/16 Iphone 6", "thumb02.jpg", "20,00", "hidden-xs hidden-sm hidden-md")
						+productImageRow("Milan Home Sciarpa", "thumb03.jpg", "20,00", "hidden-xs hidden-sm hidden-md")

			.container
				include include/couponAndGift.jade
				include include/total

			block ctaFooter
				.container-fluid.no-gutter
					hr
					.container
						.row
							.col-xs-12.col-sm-12
								.contentLineDown.pull-right
									ul.list-inline
										li
											a(href="#paypall")
												img(src="#{imagePath}payPall.png")
										li
											if namepage == "payment"
												a.btn.btn-lg.btn-primary(href="cart.html")= checkOutBtnCopy
											if namepage == "cart"
												a.btn.btn-lg.btn-primary(href="payment.html")= checkOutBtnCopy
		if namepage == "payment"
			.container-fluid
				.container
					section.contentLineUp
						- checkOutBtnCopy 			= "PAY ORDER"
						.row
							.col-xs-12
								h3 Pay your order
								p.message Your cart include&nbsp;
									strong 3 products&nbsp;
									| with a total price of&nbsp;
									span.price: strong € 465,00
				.container
